{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARCHI",
  "version": "0.5.0",
  "identifier": "com.ginoxiscatti.archi",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ARCHI",
        "width": 1000,
        "height": 600,
        "minWidth": 850,
        "minHeight": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' asset: https://* data: blob:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' ipc: http://ipc.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
        "files": {}
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
